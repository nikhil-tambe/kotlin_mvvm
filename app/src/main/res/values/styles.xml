<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--<item name="android:background">@color/colorBackground</item>-->

        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="android:datePickerDialogTheme">@style/DatePickerDialogTheme</item>

    </style>

    <style name="TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- DialogStyle -->
    <style name="ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/colorButtonText</item>
        <item name="android:paddingStart">@dimen/button_padding_width</item>
        <item name="android:paddingTop">@dimen/button_padding_height</item>
        <item name="android:paddingBottom">@dimen/button_padding_height</item>
        <item name="android:paddingEnd">@dimen/button_padding_width</item>
        <item name="android:elevation">@dimen/button_elevation</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/background_button</item>
    </style>

    <!-- DialogTheme -->
    <style name="DatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

